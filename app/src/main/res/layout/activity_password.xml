<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/LL_password_number_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:gravity="center">

        <EditText
            android:id="@+id/EDT_password_number_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:inputType="textPassword"
            android:maxLength="1" />

        <EditText
            android:id="@+id/EDT_password_number_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:inputType="textPassword"
            android:maxLength="1" />

        <EditText
            android:id="@+id/EDT_password_number_3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:inputType="textPassword"
            android:maxLength="1" />

        <EditText
            android:id="@+id/EDT_password_number_4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:inputType="textPassword"
            android:maxLength="1" />
    </LinearLayout>

    <TextView
        android:id="@+id/TV_password_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/LL_password_number_frame"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="請輸入你的密碼"
        android:textColor="@android:color/black"
        android:textSize="30dp" />

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        app:columnCount="3"
        app:rowCount="4">


        <com.kiminonawa.mydiary.shared.gui.MyDiaryButton
            android:id="@+id/But_password_key_1"
            android:layout_margin="5dp"
            android:text="1"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <com.kiminonawa.mydiary.shared.gui.MyDiaryButton
            android:id="@+id/But_password_key_2"
            android:layout_margin="5dp"
            android:text="2"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <com.kiminonawa.mydiary.shared.gui.MyDiaryButton
            android:id="@+id/But_password_key_3"
            android:layout_margin="5dp"
            android:text="3"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <com.kiminonawa.mydiary.shared.gui.MyDiaryButton
            android:id="@+id/But_password_key_4"
            android:layout_margin="5dp"
            android:text="4"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <com.kiminonawa.mydiary.shared.gui.MyDiaryButton
            android:id="@+id/But_password_key_5"
            android:layout_margin="5dp"
            android:text="5"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <com.kiminonawa.mydiary.shared.gui.MyDiaryButton
            android:id="@+id/But_password_key_6"
            android:layout_margin="5dp"
            android:text="6"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <com.kiminonawa.mydiary.shared.gui.MyDiaryButton
            android:id="@+id/But_password_key_7"
            android:layout_margin="5dp"
            android:text="7"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <com.kiminonawa.mydiary.shared.gui.MyDiaryButton
            android:id="@+id/But_password_key_8"
            android:layout_margin="5dp"
            android:text="8"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <com.kiminonawa.mydiary.shared.gui.MyDiaryButton
            android:id="@+id/But_password_key_9"
            android:layout_margin="5dp"
            android:text="9"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <com.kiminonawa.mydiary.shared.gui.MyDiaryButton
            android:id="@+id/But_password_key_cancel"
            android:layout_margin="5dp"
            android:text="Cancel"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <com.kiminonawa.mydiary.shared.gui.MyDiaryButton
            android:id="@+id/But_password_key_0"
            android:layout_margin="5dp"
            android:text="0"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <com.kiminonawa.mydiary.shared.gui.MyDiaryImageButton
            android:id="@+id/But_password_key_backspace"
            android:layout_margin="5dp"
            android:src="@drawable/ic_backspace_black_24dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />


    </android.support.v7.widget.GridLayout>

</RelativeLayout>